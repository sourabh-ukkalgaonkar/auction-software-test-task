<div class="container">
  <br>
  <h2>Sign In</h2>
  <br>

  <% if @error %>
    <div>
      <ul>
        <li>You have entered an invalid username or password</li>
      </ul>
    </div>
  <% end %>

  <%= form_tag '/login' do %>
    <div class="col-md-6">
      <div class='form-group'>
        <%= label_tag :username %>
        <%= text_field_tag :username, nil, class: 'form-control form-control-lg', id: 'username', required: true %>
      </div>
  
      <div class='form-group'>
        <%= label_tag :password%>
        <%= password_field_tag :password,  nil, class: 'form-control form-control-lg', id: 'password', required: true %>
      </div>

      <br>  
      <%= submit_tag 'Login', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
