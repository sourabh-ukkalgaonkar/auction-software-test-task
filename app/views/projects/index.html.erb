<div class="container"> 
  <% if @projects.present? %>
    <br>
    <div class='col-md-12'>
      <div class='row'>
        <div class='form-group col-md-2'>
          <strong><label> Sort Options: </label></strong>
        </div>

        <div class='form-group col-md-3'>
          <%= select_tag 'sort_by', options_for_select(sort_options, params[:sort_by] || sort_options.first), class: 'form-control col-md-3', id: 'sort_by' %>
        </div>
      </div>
    </div>
    <br>
    <h1>Projects List</h1>

    <div id="project-list">
      <%= render 'projects', projects: @projects %>  
    </div>
    <br>
  <% else %>
    <br>
    <div class="alert alert-danger">
      Please Sign In to view the projects
    </div>
  <% end %>  
</div>
